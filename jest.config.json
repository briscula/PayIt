{
  "preset": "react-native",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "globals": { "ts-jest": { "tsConfigFile": "./functions/tsconfig.json" } },
  "transform": {
    "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
    "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!react-native)/"
  ],
  "testRegex": "(/(src|functions)/.*\\.(test|spec))\\.(ts|tsx|js)$",
  "testPathIgnorePatterns": [
    "\\.snap$",
    "<rootDir>/node_modules/",
    "<rootDir>/lib/",
    "<rootDir>/functions/node_modules/",
    "<rootDir>/functions/lib/"
  ],
  "cacheDirectory": ".jest/cache",
  "collectCoverage": true,
  "collectCoverageFrom":  [
    "src/**/*.{ts,tsx}",
    "!src/**/index.ts",
    "functions/**/*.{ts,tsx}",
    "!functions/**/index.ts",
    "!**/custom_typings/**/*.ts",
    "!**/i18n/**/*.ts"
  ],
  "coverageDirectory": "coverage",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^components/(.*)$": "<rootDir>/src/components/$1",
    "^pages/(.*)$": "<rootDir>/src/components/pages/$1",
    "^services/(.*)$": "<rootDir>/src/services/$1",
    "^core/(.*)$": "<rootDir>/src/core/$1",
    "^models/(.*)$": "<rootDir>/src/models/$1"
  },
  "moduleDirectories": ["node_modules", "src", "functions/node_modules"],
  "setupFiles": [
    "./jest.hooks.tsx"
  ]
}
